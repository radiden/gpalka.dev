---
interface Props {
	companyName: string
	timeWorked: string
	languages: string[]
	website: string
}

const props = Astro.props
---

<div class="rounded-xl bg-primary-2">
	<div class="flex flex-row justify-between p-2 bg-primary-3 rounded-t-lg">
		<a target="_blank" href={props.website} class="flex flex-row gap-2">
			<span>{props.companyName}</span>
			<div class="w-4 h-4 i-carbon-launch text-accent-12 my-auto"></div>
		</a>
		<span>{props.timeWorked}</span>
	</div>
	<div class="p-2">
		<p>
			<slot />
		</p>
	</div>
	<div class="bg-primary-3 rounded-b-lg">
		<ul class="text-accent-12 flex flex-row px-2 flex-wrap">
			{props.languages.map((lang) => <li class="py-2 flex-shrink-0">{lang}</li>)}
		</ul>
	</div>
</div>

<style>
	span {
		--uno: font-[Ubuntu] font-bold text-lg text-accent-12;
	}
	li::after {
		content: 'â€¢';
		--uno: mx-2;
	}
	li:last-of-type::after {
		content: '';
	}
